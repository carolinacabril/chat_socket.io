<%- include('./partials/header') %>
<div class="container mt-5">
    <div class="row d-flex align-items-center">
        <div class="col-md-4">
            <h1 class="pb-4">Acessar Chat</h1>
            <form action="/login" method="POST">
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" class="form-control" placeholder="seuemail@email.com">
                </div>
                <div class="form-group">
                    <label>Senha</label>
                    <input type="password" class="form-control" placeholder="senha">
                </div>
                <button type="button" class="btn btn-default  w-100 mt-3">Acessar</button>
                <div class="d-flex justify-content-center align-items-center mt-1 fg-section">
                    <a href="/users/forgot" class="pr-1">Esqueceu sua senha?</a> | <a href="/users/signup" class="pl-1">NÃ£o possui cadastro?</a>
                </div>
            </form>
        </div>
        <div class="col-md-8">
            <div class="login-image">
               <img src="/images/login_backgorund.svg" class="img-fluid mt-3" alt="Login Image">
           </div>
       </div>
    </div>
    <% if(message) { %>
        <p>
          <label style="color:Red"><%= message %></label>
        </p>
    <%}%>
</div>

<%- include('./partials/footer') %>


